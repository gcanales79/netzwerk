<div class="modal fadeIn" id="modalImageCenter" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" id="modalImageDialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalImageLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalImageBody">
                <form id="postBlog">
                    <div class="form-row" action="/fileupload" method="post" enctype="multipart/form-data">
                        <div class="col input-container">
                            <input type="file" id="mainImage" name="imagenPost" />
                        </div>
                    </div>
                    <div class="col input-container">
                        <div class="input-icon">
                            <i class="fas fa-camera"></i>
                        </div>
                        <input type="text" class="form-control" id="imageAlt" placeholder="Imagen Alt Text">

                    </div>
                </form>
                <div class="progress" id="ProgressBar">
                    <div class="progress-bar progress-bar-striped" id="imageProgressBar" role="progressbar"
                        style="width: 0%" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

            </div>
            <div class="row modal-footer" id="modalImageFooter">
                <div class="col">
                    <button type="button" style="width: 100%" id="uploadImage" class="btn btn-primary"></button>
                </div>
            </div>
        </div>
    </div>
</div>